#!/usr/bin/perl
$fname = "ash.css";
#  Updated Feb 17, 2010
#
#  aquamarine
$ofile = "aquamarine.css";
open (IFILE,$fname) || die "Can't Open File: $fname\n";
open (OFILE,">$ofile") || die "Can't Open File: $ofile\n";

while ($row = <IFILE>) {
2385c2
    $row =~ s/Ash Theme              /Aquamerine Theme       /; #  Title
    $row =~ s/5d6779/007e94/; 						#  Header
    $row =~ s/background:#2a2b2d/background:#085360/; 		#  Toplinks
    $row =~ s/ededee/dcf2f9/; 						#  Base
    $row =~ s/494949/696969/; 						#  D-Text
    $row =~ s/ffffff/ffffff/; 						#  L-Text
    $row =~ s/2f416f/000000/; 						#  Links
    $row =~ s/2a2b2d/fc6d1d/; 						#  Alerts
    print OFILE $row;  
} 
close (IFILE);
close (OFILE);

