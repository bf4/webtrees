#!/usr/bin/perl
$fname = "ash.css";
$ofile = "belgianchocolateXXX.css";
use CSV;

open (IFILE,$fname) || die "Can't Open File: $fname\n";
open (OFILE,">$ofile") || die "Can't Open File: $ofile\n";

while ($ROW = <IFILE>) {
   $count++;
   $value = "";
   $property = "";
   $selector = "";
   $where = 0;
   $desc = $ROW;

   $len = length($desc);
   $where = index($desc,"#");
   if ($where = 0) {
   next;
   }
   elsif  ($desc =~ /5d6779/) {
      $property = substr($desc,0,$where);
      $value = "999999";     
   }
   elsif ($desc =~ /2a2b2d/) {
	  $property = substr($desc,0,$where);
      $value = "888888";  
   }

#  Post-process description field

   if ($where = 0) {
       print OFILE $desc, "\n"; 
   }  else {
      print OFILE $selector, $value, ";", "\n"; 
   }
   
} 
close (IFILE);
close (OFILE);
